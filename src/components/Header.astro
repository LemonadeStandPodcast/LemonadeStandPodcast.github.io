---
import HeaderLink from './HeaderLink.astro';
import DarkModeToggle from './DarkModeToggle.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-40 w-full bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
	<nav class="container mx-auto px-4 py-4 flex items-center justify-between">
		<a href="/" class="flex items-center gap-2">
			<img src="/logo.png" alt="Logo" class="w-8 h-8">
			<h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100">{SITE_TITLE}</h2>
		</a>
		<div class="flex items-center gap-6">
			<div class="hidden md:flex items-center gap-6">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/episodes">Episodes</HeaderLink>
				<HeaderLink href="/links">Links</HeaderLink>
			</div>
			<DarkModeToggle />
		</div>
	</nav>
</header>

<style>
	h1 a {
		text-decoration: none;
		color: inherit;
	}
	h1 a:hover {
		color: var(--color-lime);
	}
</style>
