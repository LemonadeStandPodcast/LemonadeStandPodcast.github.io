---
import { SITE_TITLE } from '../consts';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<html lang="en">
<head>
  <BaseHead title="Links" description="Explore useful links related to the Lemonade Stand Podcast." />
</head>
<body class="min-h-screen bg-white dark:bg-gray-900">
  <Header />
  <main class="container mx-auto py-8 max-w-4xl">
    <h1 class="text-3xl font-bold text-center text-gray-900 dark:text-gray-50 mb-8">Connect With Us</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Listen Section -->
      <section class="text-center p-4 border border-lime-200 dark:border-lime-800 rounded-lg bg-white dark:bg-gray-800 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-50 mb-4">Listen On</h2>
        <div class="space-y-3">
          <a href="https://www.youtube.com/@LemonadeStandPodcast" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">YouTube</a>
          <a href="https://open.spotify.com/show/0Yz44z9z3t8VQu4WRmsrs6" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Spotify</a>
        </div>
      </section>

      <!-- More Platforms -->
      <section class="text-center p-4 border border-lime-200 dark:border-lime-800 rounded-lg bg-white dark:bg-gray-800 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-50 mb-4">More Platforms</h2>
        <div class="space-y-3">
          <a href="https://podcasts.apple.com/us/podcast/lemonade-stand/id1799868725" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Apple Podcasts</a>
          <a href="https://music.amazon.com/podcasts/7d7e1f54-49a3-4082-81e8-f70bfe1ace63/lemonade-stand" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Amazon Music</a>
        </div>
      </section>

      <!-- Social Media -->
      <section class="text-center p-4 border border-lime-200 dark:border-lime-800 rounded-lg bg-white dark:bg-gray-800 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-50 mb-4">Social Media</h2>
        <div class="space-y-3">
          <a href="https://x.com/LemonadeCast" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Twitter</a>
          <a href="https://www.instagram.com/thelemonadecast/" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Instagram</a>
        </div>
      </section>

      <!-- Meet Aiden -->
      <section class="text-center p-4 border border-lime-200 dark:border-lime-800 rounded-lg bg-white dark:bg-gray-800 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-50 mb-4">Meet Aiden</h2>
        <div class="space-y-3">
          <a href="https://x.com/aidencalvin" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Twitter</a>
          <a href="https://www.youtube.com/@TheYardPodcast" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">The Yard Podcast</a>
        </div>
      </section>

      <!-- Meet Atrioc -->
      <section class="text-center p-4 border border-lime-200 dark:border-lime-800 rounded-lg bg-white dark:bg-gray-800 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-50 mb-4">Meet Atrioc</h2>
        <div class="space-y-3">
          <a href="https://x.com/Atrioc" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Twitter</a>
          <a href="https://www.twitch.tv/atrioc" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Twitch</a>
        </div>
      </section>

      <!-- Meet DougDoug -->
      <section class="text-center p-4 border border-lime-200 dark:border-lime-800 rounded-lg bg-white dark:bg-gray-800 shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-50 mb-4">Meet DougDoug</h2>
        <div class="space-y-3">
          <a href="https://x.com/DougDougFood" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Twitter</a>
          <a href="https://www.twitch.tv/dougdoug" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Twitch</a>
        </div>
      </section>
    </div>
    
    <!-- Contribute Section - Full Width -->
    <section class="mt-8 text-center p-4 border border-lime-200 dark:border-lime-800 rounded-lg bg-white dark:bg-gray-800 shadow-sm">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-50 mb-4">Contribute</h2>
      <div class="space-y-3">
        <a href="https://github.com/LemonadeStandPodcast/LemonadeStandPodcast.github.io" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">GitHub Repository</a>
        <a href="https://x.com/swapsha96" target="_blank" class="block text-lime-800 dark:text-lime-400 hover:underline">Contact Swapsha96 (DM for suggesting citations)</a>
      </div>
    </section>
  </main>
  <Footer />
</body>
</html>