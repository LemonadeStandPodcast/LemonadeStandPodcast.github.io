---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
<head>
  <BaseHead title="Build Your Own Tech Empire | Lemonade Stand" description="Start your imaginary tech empire, choose a startup idea, secure funding, and watch your ridiculous valuation skyrocket." />
  <style>
    .card-option {
      transition: all 0.3s ease;
      cursor: pointer;
      border: 2px solid transparent;
    }
    
    .card-option:hover {
      transform: translateY(-5px);
    }
    
    .card-option.selected {
      border-color: #FFD166;
      background: radial-gradient(circle at center, rgba(255, 209, 102, 0.1), transparent);
    }
    
    .step {
      transition: all 0.5s ease;
    }
    
    .step:not(.active) {
      display: none;
    }
    
    .result-section {
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.8s ease;
    }
    
    .result-section.show {
      opacity: 1;
      transform: translateY(0);
    }
    
    .empire-name {
      background: linear-gradient(90deg, #FFD166 0%, #06D6A0 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .glow {
      animation: glow 2s ease-in-out infinite alternate;
    }
    
    @keyframes glow {
      from {
        text-shadow: 0 0 5px #FFD166, 0 0 10px #FFD166;
      }
      to {
        text-shadow: 0 0 10px #06D6A0, 0 0 20px #06D6A0;
      }
    }
    
    .gradient-bubble {
      position: absolute;
      border-radius: 50%;
      filter: blur(40px);
      z-index: -1;
      opacity: 0.2;
    }
    
    .bg-size-200 {
      background-size: 200% 200%;
    }
    
    .bg-gradient-to-r {
      animation: gradientShift 3s ease infinite;
    }
    
    @keyframes gradientShift {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
  </style>
</head>
<body class="bg-white dark:bg-gray-900">
  <Header />
  <main class="container max-w-4xl mx-auto px-4 py-12 relative">
    <!-- Background gradient bubbles -->
    <div class="gradient-bubble w-64 h-64 bg-yellow-300 top-20 -right-10"></div>
    <div class="gradient-bubble w-96 h-96 bg-green-300 bottom-40 -left-20"></div>
    
    <h1 class="text-4xl md:text-5xl font-bold text-center text-gray-900 dark:text-white mb-4">
      Build Your <span class="bg-gradient-to-r from-yellow-400 to-lime-500 text-transparent bg-clip-text">Tech Empire</span>
    </h1>
    
    <p class="text-lg text-center text-gray-700 dark:text-gray-300 mb-12 max-w-2xl mx-auto">
      Choose your startup, secure funding, and disrupt industries. Become the next tech billionaire (in your dreams).
    </p>
    
    <!-- Game Container -->
    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 md:p-8 shadow-lg mb-8">
      <!-- Progress Bar -->
      <div class="w-full h-2 bg-gray-200 dark:bg-gray-700 rounded-full mb-6">
        <div id="progressBar" class="h-full bg-gradient-to-r from-yellow-400 to-lime-500 rounded-full transition-all duration-300" style="width: 25%"></div>
      </div>
      
      <!-- Step indicators -->
      <div class="flex justify-between mb-8">
        <div class="flex flex-col items-center">
          <div id="step1Indicator" class="w-8 h-8 rounded-full bg-yellow-400 flex items-center justify-center text-white font-bold">1</div>
          <span class="text-xs mt-1 text-gray-500">Idea</span>
        </div>
        <div class="flex flex-col items-center">
          <div id="step2Indicator" class="w-8 h-8 rounded-full bg-gray-300 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 font-bold">2</div>
          <span class="text-xs mt-1 text-gray-500">Funding</span>
        </div>
        <div class="flex flex-col items-center">
          <div id="step3Indicator" class="w-8 h-8 rounded-full bg-gray-300 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 font-bold">3</div>
          <span class="text-xs mt-1 text-gray-500">Celebrity</span>
        </div>
        <div class="flex flex-col items-center">
          <div id="step4Indicator" class="w-8 h-8 rounded-full bg-gray-300 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 font-bold">4</div>
          <span class="text-xs mt-1 text-gray-500">Launch</span>
        </div>
      </div>
      
      <!-- Step 1: Choose Your Startup Idea -->
      <div id="step1" class="step active">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">1. Choose Your Startup Idea</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-6">Select a disruptive business concept that will revolutionize the world (or at least your bank account).</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="AI Lemonade">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">AI-Powered Lemonade</h3>
            <p class="text-gray-600 dark:text-gray-400">Our neural networks analyze 500+ variables to create the perfect glass of lemonade personalized to each customer.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Web3 Dating">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Web3 Dating Platform</h3>
            <p class="text-gray-600 dark:text-gray-400">The first dating app where all relationships are stored on the blockchain. Love is immutable.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Quantum Crypto">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Quantum Cryptocurrency</h3>
            <p class="text-gray-600 dark:text-gray-400">Our innovative token exists in multiple states simultaneously until someone observes their wallet balance.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Cloud Pants">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Cloud-Integrated Pants</h3>
            <p class="text-gray-600 dark:text-gray-400">Smart pants that automatically upload your steps, squats and sitting time to our proprietary PantsCloudâ„¢.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Metaverse Pets">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Metaverse Pet Grooming</h3>
            <p class="text-gray-600 dark:text-gray-400">Virtual salon for digital pets. Because your NFT Shiba Inu deserves to look its pixelated best.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Blockchain Food">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Blockchain Food Delivery</h3>
            <p class="text-gray-600 dark:text-gray-400">Each ingredient tracked on a separate blockchain. 2-hour delivery, 4-day transaction confirmation.</p>
          </div>
        </div>
        
        <div class="flex justify-end mt-8">
          <button id="step1Next" class="px-6 py-3 bg-gray-300 dark:bg-gray-700 text-gray-600 dark:text-gray-400 font-medium rounded-lg">
            Choose an Idea First
          </button>
        </div>
      </div>
      
      <!-- Step 2: Secure Funding -->
      <div id="step2" class="step">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">2. Secure Your Funding</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-6">Every disruptive idea needs capital. Choose your funding strategy.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="VC Funding">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Silicon Valley VC</h3>
            <p class="text-gray-600 dark:text-gray-400">94% equity dilution, but includes access to a communal ping-pong table and unlimited kombucha.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Crypto ICO">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Launch an ICO</h3>
            <p class="text-gray-600 dark:text-gray-400">Raise millions with just a whitepaper and a logo. Legal issues? That's a tomorrow problem.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Crowdfunding">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Crowdfunding Campaign</h3>
            <p class="text-gray-600 dark:text-gray-400">Promise delivery in 6 months. Actual delivery: somewhere between 5 years and never.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Soul Selling">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Sell Your Soul to Big Tech</h3>
            <p class="text-gray-600 dark:text-gray-400">Corporate funding in exchange for user data and your firstborn child's browser history.</p>
          </div>
        </div>
        
        <div class="flex justify-between mt-8">
          <button id="step2Back" class="px-6 py-3 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-medium rounded-lg">
            Back
          </button>
          <button id="step2Next" class="px-6 py-3 bg-gray-300 dark:bg-gray-700 text-gray-600 dark:text-gray-400 font-medium rounded-lg">
            Choose a Funding Strategy
          </button>
        </div>
      </div>
      
      <!-- Step 3: Celebrity Endorsement -->
      <div id="step3" class="step">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">3. Choose a Celebrity Endorsement</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-6">Every successful startup needs a famous face to represent the brand.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Elon Musk">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Elon Musk</h3>
            <p class="text-gray-600 dark:text-gray-400">Tweets about your startup at 3 AM. Stock jumps 500%, then crashes when he admits he was sleepwalking.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Retired Athlete">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Retired Athlete</h3>
            <p class="text-gray-600 dark:text-gray-400">Doesn't understand your product but looks great in promotional materials holding it awkwardly.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="TikTok Star">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">TikTok Star</h3>
            <p class="text-gray-600 dark:text-gray-400">70M followers, 15 seconds of promotion, 10K new users who are all 14 years old with no money.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="AI Influencer">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">AI-Generated Influencer</h3>
            <p class="text-gray-600 dark:text-gray-400">Never complains, always on brand, occasionally posts existential crises about not being real.</p>
          </div>
        </div>
        
        <div class="flex justify-between mt-8">
          <button id="step3Back" class="px-6 py-3 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-medium rounded-lg">
            Back
          </button>
          <button id="step3Next" class="px-6 py-3 bg-gray-300 dark:bg-gray-700 text-gray-600 dark:text-gray-400 font-medium rounded-lg">
            Choose a Celebrity
          </button>
        </div>
      </div>
      
      <!-- Step 4: Launch Strategy -->
      <div id="step4" class="step">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">4. Choose Your Launch Strategy</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-6">The final step before world domination. How will you introduce your product to the world?</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Stealth Launch">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Stealth Launch</h3>
            <p class="text-gray-600 dark:text-gray-400">So stealth that even your developers don't know you've launched. Users discover your product by accident.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Super Bowl Ad">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Super Bowl Commercial</h3>
            <p class="text-gray-600 dark:text-gray-400">Blow your entire marketing budget on 30 seconds of airtime. Feature puppies for no relevant reason.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Growth Hack">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Growth Hacking</h3>
            <p class="text-gray-600 dark:text-gray-400">Spam everyone's contacts without permission. Achieve negative word-of-mouth at record speeds.</p>
          </div>
          
          <div class="card-option bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg" data-value="Twitter War">
            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Start a Twitter War</h3>
            <p class="text-gray-600 dark:text-gray-400">Pick a fight with a larger competitor. Gain sympathy users until they discover your product doesn't work.</p>
          </div>
        </div>
        
        <div class="flex justify-between mt-8">
          <button id="step4Back" class="px-6 py-3 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-medium rounded-lg">
            Back
          </button>
          <button id="launchEmpire" class="px-6 py-3 bg-gray-300 dark:bg-gray-700 text-gray-600 dark:text-gray-400 font-medium rounded-lg">
            Choose a Launch Strategy
          </button>
        </div>
      </div>
      
      <!-- Final Results -->
      <div id="results" class="step">
        <div class="result-section">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">
              Behold Your Tech Empire:
            </h2>
            <h1 id="companyName" class="text-4xl md:text-5xl font-extrabold empire-name mb-2 glow">
              Company Name
            </h1>
            <p id="tagline" class="text-lg text-gray-600 dark:text-gray-400 italic mb-8">
              Tagline will appear here
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <div class="bg-gray-50 dark:bg-gray-800/50 p-6 rounded-xl">
              <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-3">Company Statistics</h3>
              
              <div class="space-y-3">
                <div class="flex justify-between items-center border-b border-gray-200 dark:border-gray-700 pb-2">
                  <span class="text-gray-700 dark:text-gray-300">Initial Valuation</span>
                  <span id="valuation" class="font-bold text-lime-600 dark:text-lime-500">$0M</span>
                </div>
                
                <div class="flex justify-between items-center border-b border-gray-200 dark:border-gray-700 pb-2">
                  <span class="text-gray-700 dark:text-gray-300">Runway</span>
                  <span id="runway" class="font-bold text-yellow-600 dark:text-yellow-500">0 months</span>
                </div>
                
                <div class="flex justify-between items-center border-b border-gray-200 dark:border-gray-700 pb-2">
                  <span class="text-gray-700 dark:text-gray-300">Customer Acquisition Cost</span>
                  <span id="cac" class="font-bold text-red-600 dark:text-red-500">$0</span>
                </div>
                
                <div class="flex justify-between items-center border-b border-gray-200 dark:border-gray-700 pb-2">
                  <span class="text-gray-700 dark:text-gray-300">Product Readiness</span>
                  <span id="productReadiness" class="font-bold text-blue-600 dark:text-blue-500">0%</span>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="text-gray-700 dark:text-gray-300">Exit Likelihood</span>
                  <span id="exitLikelihood" class="font-bold text-purple-600 dark:text-purple-500">Unlikely</span>
                </div>
              </div>
            </div>
            
            <div class="bg-gray-50 dark:bg-gray-800/50 p-6 rounded-xl">
              <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-3">Company Timeline</h3>
              
              <div class="space-y-4" id="timeline">
                <!-- Timeline entries will be inserted here -->
              </div>
            </div>
          </div>
          
          <div class="bg-gray-50 dark:bg-gray-800/50 p-6 rounded-xl mb-8">
            <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-3">Investor Statement</h3>
            <p id="investorStatement" class="text-gray-700 dark:text-gray-300 italic">
              Investor statement will appear here.
            </p>
          </div>
          
          <div class="flex justify-center">
            <button id="startOver" class="px-8 py-4 bg-gradient-to-r from-yellow-400 via-lime-500 to-yellow-400 bg-size-200 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              Start a New Empire
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
  
  <script>
    // Game Logic
    const steps = ['step1', 'step2', 'step3', 'step4', 'results'];
    let currentStepIndex = 0;
    
    // Game choices
    let selections = {
      idea: '',
      funding: '',
      celebrity: '',
      launch: ''
    };
    
    // DOM elements
    const progressBar = document.getElementById('progressBar');
    const resultSection = document.querySelector('.result-section');
    
    // Setup event listeners for card options
    document.addEventListener('DOMContentLoaded', () => {
      // Make sure to initialize everything after DOM is fully loaded
      initializeCardOptions();
      initializeNavButtons();
    });
    
    function initializeCardOptions() {
      const cardOptions = document.querySelectorAll('.card-option');
      cardOptions.forEach(card => {
        card.addEventListener('click', function() {
          // Find all cards in the same step and remove selected class
          const currentStep = this.closest('.step');
          const stepCards = currentStep.querySelectorAll('.card-option');
          stepCards.forEach(c => c.classList.remove('selected'));
          
          // Add selected class to clicked card
          this.classList.add('selected');
          
          // Enable next button
          const nextButton = currentStep.querySelector('button[id$="Next"], button#launchEmpire');
          if (nextButton) {
            nextButton.classList.remove('bg-gray-300', 'dark:bg-gray-700', 'text-gray-600', 'dark:text-gray-400');
            nextButton.classList.add('bg-gradient-to-r', 'from-yellow-400', 'to-lime-500', 'text-white');
            
            // Change button text
            if (nextButton.id === 'step1Next') {
              nextButton.textContent = 'Secure Funding â†’';
            } else if (nextButton.id === 'step2Next') {
              nextButton.textContent = 'Find Celebrity â†’';
            } else if (nextButton.id === 'step3Next') {
              nextButton.textContent = 'Choose Launch Strategy â†’';
            } else if (nextButton.id === 'launchEmpire') {
              nextButton.textContent = 'Launch Your Empire â†’';
            }
          }
          
          // Store selection
          const value = this.getAttribute('data-value');
          if (currentStep.id === 'step1') selections.idea = value;
          if (currentStep.id === 'step2') selections.funding = value;
          if (currentStep.id === 'step3') selections.celebrity = value;
          if (currentStep.id === 'step4') selections.launch = value;
        });
      });
    }
    
    function initializeNavButtons() {
      // Next button handlers
      document.getElementById('step1Next').addEventListener('click', function() {
        if (selections.idea) nextStep();
      });
      
      document.getElementById('step2Next').addEventListener('click', function() {
        if (selections.funding) nextStep();
      });
      
      document.getElementById('step3Next').addEventListener('click', function() {
        if (selections.celebrity) nextStep();
      });
      
      document.getElementById('launchEmpire').addEventListener('click', function() {
        if (selections.launch) {
          nextStep();
          generateResults();
        }
      });
      
      // Back button handlers
      document.getElementById('step2Back').addEventListener('click', prevStep);
      document.getElementById('step3Back').addEventListener('click', prevStep);
      document.getElementById('step4Back').addEventListener('click', prevStep);
      
      // Start over button
      document.getElementById('startOver').addEventListener('click', function() {
        resetGame();
      });
    }
    
    function resetGame() {
      // Reset selections
      selections = {
        idea: '',
        funding: '',
        celebrity: '',
        launch: ''
      };
      
      // Reset UI
      const cardOptions = document.querySelectorAll('.card-option');
      cardOptions.forEach(card => card.classList.remove('selected'));
      
      const nextButtons = document.querySelectorAll('button[id$="Next"], button#launchEmpire');
      nextButtons.forEach(btn => {
        btn.classList.remove('bg-gradient-to-r', 'from-yellow-400', 'to-lime-500', 'text-white');
        btn.classList.add('bg-gray-300', 'dark:bg-gray-700', 'text-gray-600', 'dark:text-gray-400');
      });
      
      document.getElementById('step1Next').textContent = 'Choose an Idea First';
      document.getElementById('step2Next').textContent = 'Choose a Funding Strategy';
      document.getElementById('step3Next').textContent = 'Choose a Celebrity';
      document.getElementById('launchEmpire').textContent = 'Choose a Launch Strategy';
      
      // Go back to first step
      currentStepIndex = 0;
      updateUI();
      
      // Hide result section
      resultSection.classList.remove('show');
    }
    
    function nextStep() {
      if (currentStepIndex < steps.length - 1) {
        currentStepIndex++;
        updateUI();
      }
    }
    
    function prevStep() {
      if (currentStepIndex > 0) {
        currentStepIndex--;
        updateUI();
      }
    }
    
    function updateUI() {
      // Update progress bar
      const progressPercentage = ((currentStepIndex + 1) / steps.length) * 100;
      progressBar.style.width = `${Math.min(progressPercentage, 80)}%`;
      
      // Show current step, hide others
      steps.forEach((step, index) => {
        const stepElement = document.getElementById(step);
        if (index === currentStepIndex) {
          stepElement.classList.add('active');
        } else {
          stepElement.classList.remove('active');
        }
      });
      
      // Update step indicators
      for (let i = 1; i <= 4; i++) {
        const indicator = document.getElementById(`step${i}Indicator`);
        if (i <= currentStepIndex + 1) {
          indicator.classList.remove('bg-gray-300', 'dark:bg-gray-700', 'text-gray-600', 'dark:text-gray-400');
          indicator.classList.add('bg-yellow-400', 'text-white');
        } else {
          indicator.classList.remove('bg-yellow-400', 'text-white');
          indicator.classList.add('bg-gray-300', 'dark:bg-gray-700', 'text-gray-600', 'dark:text-gray-400');
        }
      }
    }
    
    function generateResults() {
      setTimeout(() => {
        resultSection.classList.add('show');
      }, 500);
      
      // Generate company name based on selections
      let companyName = '';
      let tagline = '';
      let valuation = '';
      let runway = '';
      let cac = '';
      let productReadiness = '';
      let exitLikelihood = '';
      let investorStatement = '';
      
      // Company name generator
      const prefixes = ['Quantum', 'Nexus', 'Apex', 'Hyper', 'Meta', 'Cyber', 'Flux', 'Nova', 'Pixel', 'Bit'];
      const suffixes = ['Labs', 'Technologies', 'Systems', 'Network', 'Solutions', 'Matrix', 'Dynamics', 'Ventures', 'AI', 'X'];
      const middle = selections.idea.split(' ')[0];
      companyName = `${prefixes[Math.floor(Math.random() * prefixes.length)]}${middle}${suffixes[Math.floor(Math.random() * suffixes.length)]}`;
      document.getElementById('companyName').textContent = companyName;
      
      // Generate tagline
      const taglinePrefixes = ['Disrupting', 'Revolutionizing', 'Transforming', 'Reinventing', 'Optimizing'];
      const taglineSuffixes = ['for the digital age', 'with blockchain', 'using AI', 'at scale', 'for the metaverse'];
      tagline = `${taglinePrefixes[Math.floor(Math.random() * taglinePrefixes.length)]} ${selections.idea} ${taglineSuffixes[Math.floor(Math.random() * taglineSuffixes.length)]}`;
      document.getElementById('tagline').textContent = tagline;
      
      // Company statistics based on selections
      let valuationBase = 0;
      let runwayMonths = 0;
      let cacValue = 0;
      let productReadinessValue = 0;
      
      // Valuation based on funding
      switch (selections.funding) {
        case 'VC Funding':
          valuationBase = 15 + Math.floor(Math.random() * 20);
          runwayMonths = 18 + Math.floor(Math.random() * 12);
          break;
        case 'Crypto ICO':
          valuationBase = 50 + Math.floor(Math.random() * 300);
          runwayMonths = 6 + Math.floor(Math.random() * 6);
          break;
        case 'Crowdfunding':
          valuationBase = 2 + Math.floor(Math.random() * 5);
          runwayMonths = 12 + Math.floor(Math.random() * 6);
          break;
        case 'Soul Selling':
          valuationBase = 30 + Math.floor(Math.random() * 40);
          runwayMonths = 24 + Math.floor(Math.random() * 12);
          break;
      }
      
      // CAC based on celebrity
      switch (selections.celebrity) {
        case 'Elon Musk':
          cacValue = 5 + Math.floor(Math.random() * 20);
          valuationBase *= 2;
          break;
        case 'Retired Athlete':
          cacValue = 100 + Math.floor(Math.random() * 200);
          break;
        case 'TikTok Star':
          cacValue = 20 + Math.floor(Math.random() * 30);
          break;
        case 'AI Influencer':
          cacValue = 30 + Math.floor(Math.random() * 50);
          break;
      }
      
      // Product readiness based on launch strategy
      switch (selections.launch) {
        case 'Stealth Launch':
          productReadinessValue = 70 + Math.floor(Math.random() * 30);
          break;
        case 'Super Bowl Ad':
          productReadinessValue = 20 + Math.floor(Math.random() * 30);
          cacValue += 500;
          break;
        case 'Growth Hack':
          productReadinessValue = 40 + Math.floor(Math.random() * 40);
          cacValue /= 2;
          break;
        case 'Twitter War':
          productReadinessValue = 10 + Math.floor(Math.random() * 70);
          cacValue /= 1.5;
          break;
      }
      
      // Set UI values
      document.getElementById('valuation').textContent = `$${valuationBase}M`;
      document.getElementById('runway').textContent = `${runwayMonths} months`;
      document.getElementById('cac').textContent = `$${Math.round(cacValue * 100) / 100}k`;
      document.getElementById('productReadiness').textContent = `${productReadinessValue}%`;
      
      // Calculate exit likelihood
      const exitScore = (valuationBase / 20) + (runwayMonths / 12) + (productReadinessValue / 50) - (cacValue / 20);
      let exitText = '';
      if (exitScore > 15) exitText = "Guaranteed IPO";
      else if (exitScore > 10) exitText = "Acquisition Likely";
      else if (exitScore > 5) exitText = "Possible Acquihire";
      else if (exitScore > 0) exitText = "Pivot Imminent";
      else exitText = "Spectacular Failure";
      document.getElementById('exitLikelihood').textContent = exitText;
      
      // Generate investor statement
      const investorPrefixes = [
        "This venture represents",
        "We believe this is",
        "Our analysis shows",
        "Market research suggests this is",
        "We're confident this represents"
      ];
      
      const investorDescriptions = [
        "a paradigm-shifting opportunity in the market",
        "a revolutionary approach to an established industry",
        "a moonshot with unicorn potential",
        "a promising high-risk, high-reward play",
        "a unique position in a growing market segment"
      ];
      
      const investorConclusions = [
        "We're all-in on this vision.",
        "This is the future. Period.",
        "Simply put, we like the stock.",
        "The disruption potential here is off the charts.",
        "This company checks all our boxes."
      ];
      
      investorStatement = `"${investorPrefixes[Math.floor(Math.random() * investorPrefixes.length)]} ${investorDescriptions[Math.floor(Math.random() * investorDescriptions.length)]}. ${investorConclusions[Math.floor(Math.random() * investorConclusions.length)]}"`;
      document.getElementById('investorStatement').textContent = investorStatement;
      
      // Generate timeline
      const timeline = document.getElementById('timeline');
      timeline.innerHTML = ''; // Clear existing entries
      
      const currentYear = new Date().getFullYear();
      
      // Month 0: Founding
      addTimelineEntry(timeline, `${currentYear}`, `${companyName} founded with a revolutionary vision to disrupt the ${selections.idea.toLowerCase()} market.`);
      
      // Month 3: Funding
      const fundingVerbs = {
        'VC Funding': 'secures Series A from top Silicon Valley investors',
        'Crypto ICO': 'launches ICO, raises record funds in 48 hours',
        'Crowdfunding': 'completes crowdfunding campaign at 320% of goal',
        'Soul Selling': 'announces strategic partnership with Big Tech conglomerate'
      };
      addTimelineEntry(timeline, `${currentYear}, Q2`, `${companyName} ${fundingVerbs[selections.funding]}.`);
      
      // Month 6: Celebrity
      const celebrityStories = {
        'Elon Musk': `Elon Musk tweets cryptic message about ${companyName}, stock surges 600%`,
        'Retired Athlete': `Former sports legend becomes brand ambassador for ${companyName}`,
        'TikTok Star': `Viral TikTok challenge featuring ${companyName} reaches 1 billion views`,
        'AI Influencer': `Virtual influencer Ai-Li exclusively promotes ${companyName} to digital audience`
      };
      addTimelineEntry(timeline, `${currentYear}, Q3`, celebrityStories[selections.celebrity]);
      
      // Month 12: Launch drama
      const launchStories = {
        'Stealth Launch': `${companyName} reveals they've been operating in stealth for 6 months with 10,000 users`,
        'Super Bowl Ad': `Controversial Super Bowl ad generates massive buzz but depletes marketing budget`,
        'Growth Hack': `Growth hacking strategy leads to temporary ban on multiple platforms`,
        'Twitter War': `Public Twitter feud with industry leader results in mainstream media coverage`
      };
      addTimelineEntry(timeline, `${currentYear + 1}`, launchStories[selections.launch]);
      
      // Final outcome based on exit likelihood
      const exitOutcomes = {
        "Guaranteed IPO": `${companyName} goes public in largest tech IPO of the year`,
        "Acquisition Likely": `${companyName} acquired by tech giant for undisclosed sum (rumored to be in billions)`,
        "Possible Acquihire": `${companyName} talent acquired by competitor, product shutting down`,
        "Pivot Imminent": `${companyName} announces "strategic shift" to completely different business model`,
        "Spectacular Failure": `${companyName} files for bankruptcy after accounting irregularities discovered`
      };
      addTimelineEntry(timeline, `${currentYear + 2}`, exitOutcomes[exitText]);
    }
    
    function addTimelineEntry(timeline, date, text) {
      const entry = document.createElement('div');
      entry.innerHTML = `
        <div class="flex gap-3">
          <div class="font-bold text-yellow-600 dark:text-yellow-500 whitespace-nowrap">${date}</div>
          <div class="text-gray-700 dark:text-gray-300">${text}</div>
        </div>
      `;
      timeline.appendChild(entry);
    }
  </script>
